#!/bin/bash

# Запрос имени пользователя
read -p "Введите своё имя: " name

# Приветствие
echo "Привет, $name! Добро пожаловать :)"

# Спрашиваем, как у пользователя дела
read -p "Как у вас дела, $name? " answer 

# Выводим благодарность за ответ
echo "Спасибо за ваш ответ: \"$answer\"" 

# Потенциальные вопросы
echo "{Что вы планируете делать сегодня?}"
echo "{Чем вы занимаетесь в свободное время?}"